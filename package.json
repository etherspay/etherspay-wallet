{
  "name": "etherspay-wallet",
  "description": "Official Etherspay Wallet",
  "version": "0.1.0",
  "author": "Etherspay",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.etherspay.wallet",
    "productName": "Etherspay Wallet",
    "copyright": "Copyright Â© 2022 Etherspay",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "Etherspay_Wallet_Setup.${ext}"
    },
    "icon": "build/assets/logo512.png",
    "protocols": [
      {
        "name": "Etherspay Wallet",
        "schemes": [
          "etherspay-wallet"
        ]
      }
    ]
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.0",
    "web3": "^1.7.4"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none cross-env TAILWIND_MODE=watch react-app-rewired start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "autoprefixer": "^10.4.8",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "electron": "^19.0.10",
    "electron-builder": "^23.1.0",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "postcss": "^8.4.14",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwindcss": "^3.1.6",
    "url": "^0.11.0"
  },
  "license": "MIT"
}
